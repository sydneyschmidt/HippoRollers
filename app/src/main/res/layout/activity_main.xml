<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C96D9FF4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:text="@string/gameName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/waterHippo"
        android:layout_width="match_parent"
        android:layout_height="293dp"

        android:src="@drawable/water_roller_removebg_preview"
        app:layout_constraintBottom_toTopOf="@+id/about"
        app:layout_constraintTop_toBottomOf="@id/title"

        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/aboutLabel"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/waterHippo"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/newGame"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/newGameLabel"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/about"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>